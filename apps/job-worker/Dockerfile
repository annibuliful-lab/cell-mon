# Run the container with `docker run -p 3000:3000 -t job-worker`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system job-worker && \
          adduser --system -G job-worker job-worker

COPY dist/apps/job-worker job-worker
RUN chown -R job-worker:job-worker .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix job-worker --omit=dev -f install

CMD [ "node", "job-worker" ]
