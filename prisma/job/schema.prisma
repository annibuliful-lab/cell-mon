generator client {
    provider = "prisma-client-js"
}

generator kysely {
    provider = "prisma-kysely"
    output   = "../../libs/db/src/generated/job"
    fileName = "types.ts"
}

datasource db {
    provider = "postgresql"
    url      = env("JOB_DATABASE_URL")
}

enum JobStatus {
    IDLE
    PROCESSING
    COMPLETED
    FAILED
}

model Job {
    id           String    @id @default(uuid()) @db.Uuid
    workspaceId  String    @db.Uuid
    referenceId  String
    type         String
    title        String
    input        Json?     @db.JsonB
    result       Json?     @db.JsonB
    status       JobStatus @default(IDLE)
    retryCount   Int       @default(0)
    maxRetries   Int
    errorMessage String[]  @default([])
    startedAt    DateTime?
    completedAt  DateTime?
    createdAt    DateTime  @default(now())
    updatedAt    DateTime?

    @@index([referenceId])
    @@index([workspaceId])
    @@map("job")
}

model Schedule {
    id             String   @id @default(uuid()) @db.Uuid
    workspaceId    String   @db.Uuid
    title          String
    cronExpression String
    payload        Json
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
    nextRunAt      DateTime

    @@index([workspaceId])
    @@map("schedule")
}
